<div class="container">
  <h2>ログイン</h2>

  <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= form_for(:session, url: new_user_session_path) do |f| %>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, class: "name" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :パスワード確認 %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

