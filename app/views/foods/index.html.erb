<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/profile', user: @user %>
			<%= render 'foods/newfood', food: @food %>
		</div>
		<div class="col-xs-9">
			<table class="table table-striped">
				<h2>投稿一覧</h2>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @foods.each do |food| %>
						<tr>
							<td>
								<%= link_to user_path(food.user) do %>
									<%= attachment_image_tag(food.user, :profile_image, :fill, 35, 35, fallback: "no-image-mini.jpg") %>
								<% end %>
							</td>
							<td><%= link_to food.title, food_path(food), class: "food_#{food.id}" %></td>
							<td><%= food.body %></td>
							<td><%= link_to "#{@user.food_comments.count} コメント", user_path(@user.id) %></td>
							<% if food.favorited_by?(current_user) %>
								<td>
						  			<%= link_to food_favorites_path(food), method: :delete do %>
						    			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						    			<%= food.favorites.count %> いいね解除
						  			<% end %>
								</td>
								<% else %>
								<td>
						  			<%= link_to food_favorites_path(food), method: :post do %>
						    			<i class="fa fa-heart-o" aria-hidden="true"></i>
						    			<%= food.favorites.count %> いいね！
						  			<% end %>
								</td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>